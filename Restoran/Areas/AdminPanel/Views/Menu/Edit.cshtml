@using Restoran.Models;

@{
    ViewData["Title"] = "Edit";
}

@model Menu
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Menu Edit</h4>
            <form class="forms-sample" asp-controller="Menu" asp-action="Edit" asp-area="AdminPanel"  enctype="multipart/form-data" >
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input type="text" class="form-control" asp-for="Name" placeholder="Name">
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Tag">Tag</label>
                    <input type="text" class="form-control" asp-for="Tag" placeholder="Tag">
                    <span asp-validation-for="Tag"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageFile">Image</label>
                    <input class="form-control" asp-for="ImageFile" placeholder="ImageFile" accept="Image/*">
                    <span asp-validation-for="ImageFile"></span>
                </div>
                <div asp-validation-summary="ModelOnly" ></div>
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <button class="btn btn-light" asp-action="Index">Cancel</button>
            </form>
        </div>
    </div>
</div>



